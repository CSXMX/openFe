{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "ES6",
      "DOM"
    ],
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "",
    "declarationDir": "types",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**"
  ]
}